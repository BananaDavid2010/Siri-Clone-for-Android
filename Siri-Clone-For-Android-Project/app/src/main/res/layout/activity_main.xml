<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/buttonImageView"
        android:src="@drawable/blue_mic_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onBlueMicClick"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/userWords"
        android:padding="15dp"
        android:background="#b686e7ff"
        android:textSize="15pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:textSize="15pt"
        android:id="@+id/computerWords"
        android:padding="15dp"
        android:background="#a73481fa"
        android:layout_below="@+id/buttonImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_above="@+id/userWords"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
